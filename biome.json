{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 1,
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"files": {
		"includes": ["**/*.ts", "**/*.json"]
	}
}
